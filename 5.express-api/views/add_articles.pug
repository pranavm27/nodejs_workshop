extends layout 
        
block content
    h1 article
    h2 #{title}

    form(action='/articles/showFilledDetails', method='get')
        .row
          .input-field.col.s6
            input#first_name.validate( type='text', name='firstName')
            label(for='first_name') First Name
            br
          .input-field.col.s6
            input#last_name.validate(type='text', name='lastName')
            label(for='last_name') Last Name
        .row
          .input-field.col.s6
            input#email.validate(type='email', name='email')
            label(for='email') Email
            br
          .input-field.col.s6
            input#email.validate(type='number', name='age')
            label(for='number') Age
        .row  
          button.btn(type='submit') Go